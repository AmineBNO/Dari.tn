}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateContratM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateFinContratM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrixContratM)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
