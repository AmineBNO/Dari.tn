        @Html.DisplayFor(modelItem => item.DateContratM)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateFinContratM)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DescriptionM)
